<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- customer.form.login.extra -->
        <referenceContainer name="customer.login.container">
            <container name="bss.companyacount.container" label="New Customer Container" htmlTag="div" htmlClass="block bss-company-account-create-wrapper">
                <block ifconfig="bss_company_account/general/enable"
                       name="bss_company_account"
                       class="Bss\CompanyAccount\Block\Form\Login\Info"
                       template="Bss_CompanyAccount::newcustomer.phtml" />
            </container>
        </referenceContainer>
        <move element="customer.new" destination="bss.companyacount.container" before="bss_company_account" />
    </body>
</page>